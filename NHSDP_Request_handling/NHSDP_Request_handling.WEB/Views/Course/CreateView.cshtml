@model NHSDP_Request_handling.WEB.ViewModel.CourseVM

@{
    ViewData["Title"] = "Create course";
}

<h4>Create a new course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Technology" class="control-label"></label>
                <input asp-for="Technology" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="HoursCount" class="control-label">Hours count</label>
                <input asp-for="HoursCount" class="form-control" type="number" min="2" required/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<p style="color: darkred;">@TempData["Message"]</p>