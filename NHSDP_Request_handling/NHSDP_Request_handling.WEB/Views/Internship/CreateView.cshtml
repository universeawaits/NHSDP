@model NHSDP_Request_handling.WEB.ViewModel.InternshipVM

@{
    ViewData["Title"] = "Create internship";
}

<h4>Create new internship</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="StartAt" class="control-label">Start at</label>
                <input asp-for="StartAt" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="EndAt" class="control-label">End at</label>
                <input asp-for="EndAt" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="MaxStudentsCount" class="control-label">Maximum students count</label>
                <input asp-for="MaxStudentsCount" class="form-control" min="1" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<p style="color: darkred;">@TempData["Message"]</p>