@using NHSDP_Request_handling.Core.Model;
@model IEnumerable<Internship>
@{
    ViewData["Title"] = "Internships";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div>
    <table>
        <tr>
            <th>ID</th>
            <th>Starting date</th>
            <th>End date</th>
            <th>Students count</th>
            <th>Maximum students count</th>
            <th>Enrollment state</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (Internship internship in Model)
        {
            <tr>
                <td>@internship.Id</td>
                <td>@internship.StartAt.ToShortDateString()</td>
                <td>@internship.EndAt.ToShortDateString()</td>
                <td>@internship.StudentsCount</td>
                <td>@internship.MaxStudentsCount</td>
                <td>@internship.EnrollmentState</td>
                <td><button class="btn btn-primary">Delete</button></td>
                <td><button class="btn btn-primary">Edit</button></td>
            </tr>
        }
    </table>
</div>

<input type="button" value="Create internship" onclick="@("window.location.href='" + @Url.Action("Create", "Office") + "'");" class="btn btn-primary" />