@model NHSDP_Request_handling.WEB.ViewModel.OfficeVM

@{
    ViewData["Title"] = "Add office";
}

<h4>Add a new office</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Adress" class="control-label"></label>
                <input asp-for="Adress" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="CabinetsCount" class="control-label">Cabinets count</label>
                <input asp-for="CabinetsCount" class="form-control" type="number" min="1" required />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<p style="color: darkred;">@TempData["Message"]</p>