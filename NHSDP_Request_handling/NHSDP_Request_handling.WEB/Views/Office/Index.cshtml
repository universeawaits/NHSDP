@using NHSDP_Request_handling.Core.Model;
@model IEnumerable<Office>
@{
    ViewData["Title"] = "Offices";
}

<div>
    <table>
        <tr>
            <th>ID</th>
            <th>Adress</th>
            <th>Cabinets count</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (Office office in Model)
        {
            <tr>
                <td>@office.Id</td>
                <td>@office.Adress</td>
                <td>@office.CabinetsCount</td>
                <td><input type="button" value="Delete" onclick="@("window.location.href='" + @Url.Action("Delete", "Office", office.Id) + "'");" class="btn btn-primary" /></td>
                <td><button class="btn btn-primary">Edit</button></td>
            </tr>
        }
    </table>
</div>

<input type="button" value="Add office" onclick="@("window.location.href='" + @Url.Action("CreateView", "Office") + "'");" class="btn btn-primary" />