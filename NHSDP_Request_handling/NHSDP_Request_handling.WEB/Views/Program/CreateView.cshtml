@model NHSDP_Request_handling.WEB.ViewModel.ProgramVM

@{
    ViewData["Title"] = "Create studying program";
}

<h4>Create studying program</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="InternshipId" class="control-label">Internship</label>
                <select asp-for="InternshipId" class="form-control" asp-items="@((List<SelectListItem>)ViewData["Internships"])" required></select>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label">Office</label>
                <select asp-for="CourseId" class="form-control" asp-items="@((List<SelectListItem>)ViewData["Courses"])" required></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<p style="color: darkred;">@TempData["Message"]</p>